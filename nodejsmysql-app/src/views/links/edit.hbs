


<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="POST">
                        <div class="from-group p-2">
                            <input type="text" value="{{link.title}}" class="form-control" placeholder="Title" name="title" autofocus>
                        </div>
                        <div class="from-group p-2">
                            <input type="url" class="form-control" value="{{link.url}}" placeholder="URL" name="url">
                        </div>
                        <div class="from-group p-2">
                            <textarea name="description" class="form-control" rows="2" >{{link.description}}</textarea>
                        </div>
                        <div class="from-group p-2">
                            <button class="btn btn-success btn-block">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>